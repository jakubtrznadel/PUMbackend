@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>MiniStrava - Panel Admina</title>
    <link rel="stylesheet" href="~/css/admin.css" />
</head>
<body>
    <div class="dashboard-container">
        <header>
            <h1>Witaj, @User.Identity.Name!</h1>
            <form method="post" action="/admin/logout">
                <button type="submit" class="logout-button">Wyloguj</button>
            </form>
        </header>

        <div class="stats-grid">
            <div class="stat-card">
                <h3>Użytkownicy</h3>
                <p>@ViewBag.UserCount ?? 0</p>
            </div>
            <div class="stat-card">
                <h3>Aktywności</h3>
                <p>@ViewBag.ActivityCount ?? 0</p>
            </div>
            <div class="stat-card">
                <h3>Łączny dystans</h3>
                <p>@ViewBag.TotalDistance ?? 0 km</p>
            </div>
        </div>
    </div>
</body>
</html>
